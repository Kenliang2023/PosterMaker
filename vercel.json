{
  "version": 2,
  "buildCommand": "node ./node_modules/vite/bin/vite.js build",
  "outputDirectory": "dist",
  "functions": {
    "src/server/server.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/src/server/server.js" },
    { "source": "/(.*)", "destination": "/" }
  ]
} 